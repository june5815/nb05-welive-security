  "scripts": {
    "dev": "export NODE_ENV=development && nodemon --exec ts-node src/app.ts",
    "dev:win": "cross-env NODE_ENV=development nodemon --exec ts-node ./src/app.ts",
    "migrate:dev": "dotenv -e .env.dev npx prisma migrate dev",
    "migrate:reset": "dotenv -e .env.dev npx prisma migrate reset",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "type:check": "tsc --noEmit",
    "test:unit": "export NODE_ENV=test && jest src/test/unit --runInBand",
    "test:unit:win": "cross-env NODE_ENV=test jest src/test/unit --runInBand",
    "test:api": "export NODE_ENV=test && jest src/test/api --runInBand",
    "test:api:win": "cross-env NODE_ENV=test jest src/test/api/auth --runInBand",
    "build": "npx tsc",
    "prod": "node ./dist/index.js",
    "prepare": "husky"
  },
