{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "types": ["jest", "node"],
    "typeRoots": ["src/_common/types", "node_modules/@types"]
  },
  "include": ["src", "**/*.test.ts"],
  "exclude": ["jest.setup.ts"],
  "ts-node": {
    "files": true
  }
}
